<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FMBaseStyle"
    android:gravity="center_vertical"
    tools:context="grigoreva.facesmanager.MainActivity">

    <Button
        android:id="@+id/person_list_btn"
        style="@style/FMButtonStyle"
        android:layout_marginBottom="12dp"
        android:text="Список известных лиц" />

    <Button
        android:id="@+id/add_photo_btn"
        style="@style/FMButtonStyle"
        android:layout_below="@+id/person_list_btn"
        android:layout_marginBottom="12dp"
        android:text="Добавить фото" />

    <Button
        android:id="@+id/detect_face_btn"
        style="@style/FMButtonStyle"
        android:layout_below="@+id/add_photo_btn"
        android:layout_marginBottom="12dp"
        android:text="Распознать фото" />

</RelativeLayout>
