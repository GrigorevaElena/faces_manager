<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/face_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/new_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"/>

        <ImageView
            android:id="@+id/selected_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/person_data_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@+id/face_container"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="ФИО"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Возраст"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Контакты (Список)"/>

    </LinearLayout>

    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить лицо"
        android:layout_below="@+id/person_data_container"/>

</RelativeLayout>